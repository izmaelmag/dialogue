{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
